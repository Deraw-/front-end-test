{
	"name": "front-end-test",
	"version": "0.1.0",
	"private": true,
	"description": "Test for an interview",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint",
		"test:unit": "vue-cli-service test:unit",
		"test:e2e": "vue-cli-service test:e2e",
		"serve:back": "json-server server/db.json --routes server/routes.json --static server/public"
	},
	"dependencies": {
		"axios": "^0.18.0",
		"raven-js": "^3.27.0",
		"vue": "^2.6.10",
		"vue-config": "^1.0.0",
		"vue-i18n": "^8.9.0",
		"vue-material-design-icons": "^3.1.0",
		"vue-meta": "^1.5.8",
		"vue-router": "^3.0.2",
		"vuex": "^3.1.0",
		"vuex-persist": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.4.0",
		"@babel/polyfill": "^7.4.0",
		"@types/jest": "^24.0.11",
		"@types/node": "^11.11.4",
		"@types/promise.prototype.finally": "^2.0.3",
		"@typescript-eslint/parser": "^1.5.0",
		"@vue/cli-plugin-babel": "^3.5.1",
		"@vue/cli-plugin-eslint": "^3.5.1",
		"@vue/cli-plugin-typescript": "^3.5.1",
		"@vue/cli-plugin-unit-jest": "^3.5.1",
		"@vue/cli-service": "^3.5.1",
		"@vue/eslint-config-standard": "^4.0.0",
		"@vue/eslint-config-typescript": "^4.0.0",
		"@vue/test-utils": "^1.0.0-beta.29",
		"babel-core": "7.0.0-bridge.0",
		"babel-plugin-transform-imports": "^1.5.1",
		"eslint": "^5.15.3",
		"eslint-plugin-vue": "^5.2.2",
		"jest": "^23.6.0",
		"jest-serializer-vue": "^2.0.2",
		"lint-staged": "^8.1.5",
		"node-sass": "^4.11.0",
		"sass-loader": "^7.1.0",
		"ts-jest": "^23.10.5",
		"typescript": "~3.2.1",
		"vue-template-compiler": "^2.6.10",
		"webpack": "^4.29.6"
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"IE 11",
		"last 2 versions",
		"not ie <= 8"
	],
	"jest": {
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"vue"
		],
		"transform": {
			"^.+\\.jsx?$": "babel-jest",
			"^.+\\.vue$": "vue-jest",
			".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
			"^.+\\.tsx?$": "ts-jest"
		},
		"moduleNameMapper": {
			"^@/(.*)$": "<rootDir>/src/$1",
			"^tests-unit/(.*)$": "<rootDir>/tests/unit/$1",
			"^vue$": "<rootDir>/node_modules/vue/dist/vue.common.js"
		},
		"snapshotSerializers": [
			"<rootDir>/node_modules/jest-serializer-vue"
		],
		"testMatch": [
			"<rootDir>/(tests/unit/**/*.spec.(js|jsx|ts|tsx)|**/__tests__/*.(js|jsx|ts|tsx))"
		],
		"coverageReporters": [
			"json",
			"lcov",
			"text",
			"html",
			"text-summary"
		],
		"coverageDirectory": "<rootDir>/tests/unit/coverage",
		"collectCoverage": true,
		"collectCoverageFrom": [
			"**/*.{ts,vue}",
			"!**/node_modules/**",
			"!**/*.d.ts",
			"!**/router.ts",
			"!**/config/index.ts",
			"!**/main.ts",
			"!**/plugins/**",
			"!**/store/**",
			"!**/i18n.ts",
			"!**/services/**",
			"!**/tests/**"
		],
		"testURL": "http://localhost/"
	},
	"gitHooks": {
		"pre-commit": "lint-staged"
	},
	"lint-staged": {
		"*.ts": [
			"vue-cli-service lint",
			"git add"
		],
		"*.vue": [
			"vue-cli-service lint",
			"git add"
		],
		"*.js": [
			"vue-cli-service lint",
			"git add"
		]
	}
}
